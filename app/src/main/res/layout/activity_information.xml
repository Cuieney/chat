<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EDEDED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/back"
            android:text="个人信息"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/user_head_container"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageView
                android:src="@drawable/right"
                android:id="@+id/right_icon"
                android:layout_width="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/headImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"

                android:layout_toLeftOf="@id/right_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/head" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="#EDEDED" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="10dp"
            android:id="@+id/nick_name_container"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <ImageView
                android:src="@drawable/right"
                android:id="@+id/nickname_right_icon"
                android:layout_width="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="who"
                android:layout_toLeftOf="@id/nickname_right_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/applogo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="#EDEDED" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:id="@+id/user_id_container"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="微信号"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <ImageView
                android:src="@drawable/right"
                android:id="@+id/userID_right_icon"
                android:layout_width="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jkldsjakjfhsakl"
                android:layout_toLeftOf="@id/userID_right_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/applogo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="#EDEDED" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>